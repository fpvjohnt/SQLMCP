# SQL Server Configuration
DB_DRIVER=ODBC Driver 17 for SQL Server
DB_SERVER=sndm.nordstrom.net
DB_DATABASE=ServiceNow
DB_TRUSTED_CONNECTION=yes

# Optional: Use SQL Server authentication instead
# DB_USERNAME=your_username
# DB_PASSWORD=your_password

# MCP Server Configuration
# Use 0.0.0.0 to accept connections from any machine (e.g., Mac connecting to Windows VM)
# Use 127.0.0.1 for local-only connections (more secure if running on same machine)
MCP_HOST=0.0.0.0
MCP_PORT=8000

# Query Configuration
MAX_ROWS=1000
QUERY_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=mcp_server.log
